# Work Assistant V2 Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Work Assistant V2
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# API prefix
API_V1_PREFIX=/api/v1

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=["*"]

# =============================================================================
# Database (PostgreSQL) - REQUIRED
# =============================================================================
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=work_assistant_v2

# =============================================================================
# Redis - REQUIRED
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_KEY=

# =============================================================================
# RabbitMQ - REQUIRED
# =============================================================================
RABBIT_BROKER_URL=amqp://guest:guest@localhost:5672/

# =============================================================================
# MQTT
# =============================================================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID_PREFIX=work-assistant-v2

# =============================================================================
# JWT Authentication - REQUIRED
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Azure AD / Graph API (SharePoint)
# =============================================================================
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_DRIVE_ID=
AZURE_SUPPLY_PATH=

# =============================================================================
# Azure Blob Storage
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME_RESUME=

# =============================================================================
# Azure Email
# =============================================================================
AZURE_SEND_EMAIL=
AZURE_EMAIL_TENANT_ID=
AZURE_EMAIL_CLIENT_ID=
AZURE_EMAIL_CLIENT_SECRET=

# =============================================================================
# MSAL (Microsoft Authentication Library)
# =============================================================================
MSAL_AUTHORITY_ID=
MSAL_CLIENT_ID=
MSAL_BACKEND_CLIENT_SECRET=

# =============================================================================
# AI Services
# =============================================================================
OPENAI_URL=
THIRD_PARTY_ANALYZE_URL=
CALLBACK_BASE_URL=

# Dify
DIFY_API_BASE_URL=
DIFY_API_KEY=

# =============================================================================
# Kong API Gateway
# =============================================================================
KONG_NAME=
KONG_AUTH=

# =============================================================================
# File Paths
# =============================================================================
LOCAL_PATH=
LOCAL_FLAG=0
SUPPLY_BASE_URL=
